<odoo>
    <!-- Tree View for Notice -->
    <record id="view_notice_tree" model="ir.ui.view">
        <field name="name">notice.tree</field>
        <field name="model">notice</field>
        <field name="arch" type="xml">
            <tree string="Notice Information">
                <field name="letter_date_start"/>
                <field name="letter_date_end"/>
                <field name="product_type"/>
                <field name="letter_type"/>
            </tree>
        </field>
    </record>

    <!-- Form View for Notice -->
    <record id="view_notice_form" model="ir.ui.view">
        <field name="name">notice.form</field>
        <field name="model">notice</field>
        <field name="arch" type="xml">
            <form string="Notice Information">
                <sheet>
                    <group>
                        <field name="letter_date_start"/>
                        <field name="letter_date_end"/>
                        <field name="product_type"/>
                        <field name="letter_type"/>
                    </group>
                <notebook>
                    <page string="Details">
                        <field name="head_ids" widget="one2many_list" >
                            <tree string="Installment Line Details" editable="bottom">
                                <field name="no"/>
                                <field name="letter_date_start_D"/>
                                <field name="contract_number"/>
                                <field name="name_lessee"/>
                                <field name="address_lessee"/>
                                <field name="car_type"/>
                                <field name="car_brand"/>
                                <field name="car_model"/>
                                <field name="car_color"/>
                                <field name="engine_number"/>
                                <field name="chassis_number"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_notice" model="ir.actions.act_window">
        <field name="name">Notice</field>
        <field name="res_model">notice</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_notice" name="จดหมายทวงถาม" parent="account.menu_finance" action="action_notice" sequence="20"/>


</odoo>

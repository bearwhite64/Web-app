<odoo>
    <record id="view_main_assessment_form" model="ir.ui.view">
        <field name="name">main.assessment.form</field>
        <field name="model">main.assessment</field>
        <field name="arch" type="xml">
            <form string="Main Assessment">
                <sheet>
                    <group>
                        <field name="name_work"/>
                    </group>
                    <notebook>
                        <page string="Sub Aspects">
                            <field name="sub_aspect_ids">
                                <tree editable="bottom">
                                    <field name="aspect"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_main_assessment" model="ir.actions.act_window">
        <field name="name">Sub</field>
        <field name="res_model">main.assessment</field>
        <field name="view_mode">tree,form</field>
    </record>


    <menuitem id="menu_sub" name="Sub" parent="menu_green_root" action="action_main_assessment" sequence="3"/>
</odoo>
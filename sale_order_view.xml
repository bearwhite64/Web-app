<?xml version="1.0"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="product_product_master_addon">
            <field name="name">product_extended.product.master.view</field>
            <field name="model">product.template</field>
            <field name="priority">3</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='taxes_id']" position="before">
                    <div>
                        <label for="wht" string="ณ.ที่จ่าย"/>
                        <field name="wht" nolabel="1"/>
                        <label for="wht_per" string="% ณ.ที่จ่าย"/>
                        <field name="wht_per" nolabel="1"/>
                    </div>
                    <div>
                        <label for="wht" string="หักล่วงหน้า"/>
                        <field name="adv" nolabel="1"/>
                        <label for="wht" string="% ล่วงหน้า"/>
                        <field name="adv_per" nolabel="1"/>
                    </div>


                </xpath>


            </field>
        </record>


        <record id="view_sale_order_line_wht" model="ir.ui.view">
            <field name="name">sale.order.line.wht</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@id='create_invoice']" position="attributes">
                    <attribute name="string">จัดทำสัญญา</attribute>
                </xpath>

                <xpath expr="//field[@name='order_line']/tree//field[@name='price_unit']"
                       position="after">

                    <field name="sdwht"/>
                    <field name="amtwht"/>

                    <field name="interest"/>
                    <field name="principle"/>
                </xpath>
<!--                <xpath expr="//field[@name='order_line']/tree//field[@name='price_subtotal']" position="attributes">-->
<!--                    <attribute name="invisible">1</attribute>-->
<!--                </xpath>-->
                <xpath expr="//field[@name='order_line']/tree//field[@name='product_id']" position="before">
                    <field name="no_periods"/>
                    <field name="due_date_periods"/>
                    <field name="overdue"/>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree//field[@name='tax_id']" position="after">
                    <field name="total"/>
                </xpath>



            </field>
        </record>
        <record id="view_sale_order_filter_inherit" model="ir.ui.view">
            <field name="name">sale.order.filter.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.sale_order_view_search_inherit_quotation"/>
            <field name="arch" type="xml">
                <!-- แก้ไขตัวกรอง My Quotations เป็น พิจารณาสินเชื่อของฉัน -->
                <xpath expr="//filter[@name='my_quotation']" position="attributes">
                    <attribute name="string">พิจารณาสินเชื่อของฉัน</attribute>
                </xpath>

                <!-- แก้ไขตัวกรอง Quotations เป็น พิจารณาสินเชื่อ -->
                <xpath expr="//filter[@name='draft']" position="attributes">
                    <attribute name="string">พิจารณาสินเชื่อ</attribute>
                </xpath>

                <!-- แก้ไขตัวกรอง Sales Orders เป็น รอทำสัญญา -->
                <xpath expr="//filter[@name='sales']" position="attributes">
                    <attribute name="string">รอทำสัญญา</attribute>
                </xpath>
            </field>
        </record>
        <!-- Inherit the existing view and add sdwht field -->
        <record id="view_account_move_new_line_inherit" model="ir.ui.view">
            <field name="name">account.move.new.line.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
<!--                <xpath expr="//page[@name='other_info']" position="after">-->
<!--                    <page string="ยอดที่มีให้เก็บ" name="total_available_new">-->
<!--                        <field name="line_ids">-->
<!--                            <tree editable="bottom">-->
<!--                                <field name="principle"/>-->
<!--                                <field name="interest"/>-->
<!--                                <field name="fine"/>-->
<!--                                <field name="tracking_fee"/>-->
<!--                                <field name="outstanding_balance"/>-->
<!--                                <field name="total_collected"/>-->
<!--                                <field name="remaining_principal"/>-->
<!--                            </tree>-->
<!--                        </field>-->
<!--                    </page>-->
<!--                </xpath>-->
                <!-- Find the position after the discount field -->
                <xpath expr="//field[@name='discount']" position="after">
                    <field name="asdwht" string="ภาษีหัก ณ.ที่จ่าย"/>
                    <field name="asdamtwht" string="ภาษีหักไว้"/>
                </xpath>
                <xpath expr="//field[@name='product_id']" position="before">
                    <field name="no_periods"/>
                    <field name="due_date_periods"/>
                    <field name="paid_date_periods"/>
                    <field name="overdue"/>
                </xpath>
                <xpath expr="//field[@name='price_subtotal']" position="before">
                    <field name="payment_pay"/>
                </xpath>
                <xpath expr="//field[@name='price_subtotal']" position="after">
                    <field name="out_balance"/>
                    <field name="paid_balance"/>
                </xpath>

                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="employee_id"/>
                    <field name="receipt_contract"/>
                    <field name="receipt_contract_code"/>
                    <field name="period_last"/>
                    <field name="paid_date_last"/>
                    <field name="paid_date"/>
                </xpath>
                <xpath expr="//field[@name='quantity']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='product_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='account_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='price_subtotal']" position="attributes">
                    <attribute name="string">ยอดที่ต้องเก็บ</attribute>
                </xpath>
<!--                <xpath expr="//field[@name='no_periods']" position="before">-->
<!--                    <button name="your_button_action"-->
<!--                            type="object"-->
<!--                            string="ข้อมูล"-->
<!--                            class="btn-primary"-->
<!--                            />-->
<!--                </xpath>-->
            </field>
        </record>
        #popup ประวัติการชำระเงิน

        #บี๊บทำ
        <record id="sale_edit_form" model="ir.ui.view">
            <field name="name">sale.edit.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">


                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="amount"/>
                    <field name="product"/>
                    <field name="number"/>
                    <field name="branch"/>
                    <field name="contract_number"/>
                    <field name="cus_number"/>
                    <field name="date_contract"/>
                    <field name="credit_limit"/>
                    <field name="remaining_principal"/>
                    <field name="accrued_interest"/>
                    <field name="fine"/>
                    <field name="tracking_fee"/>
                    <field name="overdue_installment"/>
                    <field name="installment"/>
                    <field name="latest_payment"/>
                    <field name="owed_a_fine"/>
                    <field name="bill_coll"/>
                    <field name="registration"/>
                </xpath>
                <xpath expr="//field[@name='date_order']" position="after">
                    <field name="chassis_number"/>
                    <field name="address"/>
                    <field name="all_periods"/>
                    <field name="outstanding_installment"/>
                    <field name="from_the_period"/>
                    <field name="car_model"/>
                    <field name="car_color"/>
                    <field name="guarantor_code1"/>
                    <field name="guarantor_code2"/>
                    <field name="name_guarantor1"/>
                    <field name="name_guarantor2"/>
                    <field name="address_guarantor1"/>
                    <field name="address_guarantor2"/>
                    <field name="latest_payment_amount"/>
                    <field name="number_of_days_missed"/>
                    <field name="dew_day"/>
                    <field name="approve_date"/>
                </xpath>
                <xpath expr="//field[@name='validity_date']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='date_order']" position="attributes">
                    <attribute name="string">วันที่</attribute>
                </xpath>
                <xpath expr="//field[@name='pricelist_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='payment_term_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='qty_delivered']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree//field[@name='qty_delivered']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree//field[@name='qty_invoiced']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree//field[@name='product_id']" position="attributes">
                    <attribute name="string">ของค้ำประกัน</attribute>
                </xpath>
                <xpath expr="//header" position="inside">
                    <button string="Calculate Period" name="action_confirm" type="object" class="oe_highlight"
                            attrs="{'invisible': [('state', '=', 'sale')]}"/>/>
                </xpath>
            </field>
        </record>
        <record id="view_payment_edit_inherit" model="ir.ui.view">
            <field name="name">payment.edit.inherit.form</field>
            <field name="model">account.payment.register</field>
            <field name="inherit_id" ref="account.view_account_payment_register_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_method_line_id']" position="after">
                    <group>
                        <field name="pay_period"/>
                        <!--                        <field name="money"/>-->
                    </group>
                </xpath>
                <xpath expr="//field[@name='payment_difference']" position="attributes">
                    <group>
                        <attribute name="invisible">1</attribute>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</odoo>

<odoo>
    <!-- Tree View for Job Transfer Report -->
    <record id="view_job_transfer_report_tree" model="ir.ui.view">
        <field name="name">job.transfer.report.tree</field>
        <field name="model">job.transfer.report</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="outstanding_installment"/>
                <field name="manager"/>
                <field name="employee"/>
            </tree>
        </field>
    </record>

    <!-- Form View for Job Transfer Report -->
    <record id="view_job_transfer_report_form" model="ir.ui.view">
        <field name="name">job.transfer.report.form</field>
        <field name="model">job.transfer.report</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="get_data" string="ดึงข้อมูล" type="object" default_focus="1"
                            class="oe_highlight" data-hotkey="q"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="date_from" widget="daterange" class="oe_inline" options="{'related_end_date': 'date_to'}"/>
                            <field name="outstanding_installment"/>
                            <field name="manager"/>
                            <field name="employee"/>
                        </group>
                        <group>
                            <field name="date_to" widget="daterange" class="oe_inline" options="{'related_end_date': 'date_from'}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Details">
                            <field name="line_id">
                                <tree editable="bottom">
                                    <field name="no_contract"/>
                                    <field name="no_customer"/>
                                    <field name="name"/>
                                    <field name="old_collector"/>
                                    <field name="new_collector"/>
                                    <field name="road"/>
                                    <field name="road_name"/>
                                    <field name="no_zone"/>
                                    <field name="name_zone"/>
                                    <field name="out_balance"/>
                                    <field name="amount_out_balance"/>
                                    <field name="date_end"/>
                                    <field name="date_out_end"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View for Job Transfer Line -->
    <record id="view_job_transfer_line_tree" model="ir.ui.view">
        <field name="name">job.transfer.line.tree</field>
        <field name="model">job.transfer.line</field>
        <field name="arch" type="xml">
            <tree>
                <field name="no_contract"/>
                <field name="no_customer"/>
                <field name="name"/>
                <field name="old_collector"/>
                <field name="new_collector"/>
                <field name="road"/>
                <field name="road_name"/>
                <field name="no_zone"/>
                <field name="name_zone"/>
                <field name="out_balance"/>
                <field name="amount_out_balance"/>
                <field name="date_end"/>
                <field name="date_out_end"/>
            </tree>
        </field>
    </record>

    <!-- Form View for Job Transfer Line -->
    <record id="view_job_transfer_line_form" model="ir.ui.view">
        <field name="name">job.transfer.line.form</field>
        <field name="model">job.transfer.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="no_contract"/>
                        <field name="no_customer"/>
                        <field name="name"/>
                        <field name="old_collector"/>
                        <field name="new_collector"/>
                        <field name="road"/>
                        <field name="road_name"/>
                        <field name="no_zone"/>
                        <field name="name_zone"/>
                        <field name="out_balance"/>
                        <field name="amount_out_balance"/>
                        <field name="date_end"/>
                        <field name="date_out_end"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for Job Transfer Report -->
    <record id="action_job_transfer_report" model="ir.actions.act_window">
        <field name="name">Job Transfer Report</field>
        <field name="res_model">job.transfer.report</field>
        <field name="view_mode">tree,form</field>
        <field name="help">Manage Job Transfer Reports</field>
    </record>

    <!-- Action for Job Transfer Line -->
    <record id="action_job_transfer_line" model="ir.actions.act_window">
        <field name="name">Job Transfer Line</field>
        <field name="res_model">job.transfer.line</field>
        <field name="view_mode">tree,form</field>
        <field name="help">Manage Job Transfer Line Records</field>
    </record>

    <menuitem id="menu_report" name="รายงานการโอนย้ายงาน" parent="menu_transfer_work"
              action="action_job_transfer_report" sequence="3"/>
</odoo>

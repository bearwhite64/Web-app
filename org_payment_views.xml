<!--    การกำหนด From-->
    <record id="view_payment_data_form" model="ir.ui.view">
        <field name="name">payment.data.form</field>
        <field name="model">payment.data</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="house_no"/>
                            <field name="mas_in"/>
                        </group>
                        <group>
                            <field name="date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="ธุรกรรมรายรับ-รายจ่าย">
                            <field name="line_in">
                                <tree editable = "top">
<!--                                    <field name="code"/>-->
                                    <field name="payment_type"/>
<!--                                    <field name="code1"/>-->
                                    <field name="code1"/>
<!--                                    <field name="description"/>-->
                                    <field name="amount"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ตารางของ table เป็น tree and form-->
    <record model="ir.ui.view" id="view_payment_data">
    <field name="name">payment.data.list</field>
    <field name="model">payment.data</field>
    <field name="arch" type="xml">
        <tree string="Payment">
            <field name="name"/>
            <field name="house_no"/>
            <field name="mas_in"/>
        </tree>
    </field>
    </record>


    <record id="action_payment_data" model="ir.actions.act_window">
        <field name="name">Payment</field>
        <field name="res_model">payment.data</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>


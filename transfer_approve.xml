<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_transfer_approve_form" model="ir.ui.view">
        <field name="name">transfer.approve.form</field>
        <field name="model">transfer.approve</field>
        <field name="arch" type="xml">
            <form string="Transfer Approve">
                <header>
                    <button name="get_data" string="ดึงข้อมูล" type="object" default_focus="1"
                            class="oe_highlight" data-hotkey="q"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="date_from"/>
                            <field name="from_officer"/>
                            <field name="to_officer"/>
                            <field name="transfer_type"/>
<!--                            <field name="no_loan"/>-->
<!--                            <field name="area"/>-->
                        </group>
                        <group>
                            <field name="date_to"/>
                            <field name="transfer_type"/>
<!--                            <field name="loan_type"/>-->
<!--                            <field name="bucket"/>-->
                            <field name="approve_result"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Lines">
                            <field name="line_id">
                                <tree string="Transfer Lines" editable="bottom">
                                    <field name="transfer_code"/>
                                            <field name="transfer_date"/>
                                            <field name="transferor"/>
                                            <field name="type_transfer"/>
                                            <field name="tracking_office"/>
                                            <field name="transfer_reason"/>
                                            <field name="approve_result"/>
                                            <field name="approve_note"/>
                                            <field name="approver"/>
                                            <field name="date_approve"/>
                                            <field name="status"/>
                                </tree>
                                <form string="Transfer Line">
                                    <sheet>
                                        <group>
                                            <field name="transfer_code"/>
                                            <field name="transfer_date"/>
                                            <field name="transferor"/>
                                            <field name="type_transfer"/>
                                            <field name="tracking_office"/>
                                            <field name="transfer_reason"/>
                                            <field name="approve_result"/>
                                            <field name="approve_note"/>
                                            <field name="approver"/>
                                            <field name="date_approve"/>
                                            <field name="status"/>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_transfer_approve_tree" model="ir.ui.view">
        <field name="name">transfer.approve.tree</field>
        <field name="model">transfer.approve</field>
        <field name="arch" type="xml">
            <tree string="Transfer Approve">
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="loan_type"/>
                <field name="from_officer"/>
                <field name="to_officer"/>
                <field name="approve_result"/>
            </tree>
        </field>
    </record>

    <record id="action_transfer_approve" model="ir.actions.act_window">
        <field name="name">Transfer Approve</field>
        <field name="res_model">transfer.approve</field>
        <field name="view_mode">tree,form</field>
    </record>

        <menuitem id="menu_transfer_work_2" name="อนุมัติการโอนย้ายงาน" parent="menu_transfer_work"
              action="action_transfer_approve" sequence="2"/>
</odoo>


